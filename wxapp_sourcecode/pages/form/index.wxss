/* pages/form/index.wxss */
.ticket-panel{
  margin: 20px 5px 60px 5px !important;
  padding-bottom: 5px  !important;
  background-color: #fff;
  border: 1px solid transparent;
  border-color: #ebeef5;
  border-radius: 0;
  box-shadow: 0 1px 1px rgba(0,0,0,.05);
  border-radius: 4px;
}

.ticket-form{
  padding: 10px;
  display: block;
}

.form-title{
  padding: 10px 0 5px;
  font-weight: 600;
  color: #303133;
  line-height: 40px;
}

.pes-form-cell, .ticket-form .van-cell{
  padding: 10px 16px 10px 0px !important;
}
.pes-form-cell::after, .ticket-form .van-cell::after{
  left: 0 !important;
}